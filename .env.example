# OpenRouter API Configuration
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Langfuse Cloud Configuration
# Get your keys from: https://cloud.langfuse.com/project/settings
LANGFUSE_PUBLIC_KEY=pk-lf-your_public_key_here
LANGFUSE_SECRET_KEY=sk-lf-your_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# Database Configuration (SQLite)
# Path to SQLite database file
DATABASE_PATH=./data/agents.db

# Observability Configuration
# Directory for trace exports (if using file-based mode)
TRACES_OUTPUT_DIR=./traces/

# Agent Configuration
# Maximum iterations for refinement loops
MAX_AGENT_ITERATIONS=5

# Model Configuration
# Default model to use via OpenRouter
DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# Logging
LOG_LEVEL=INFO
DEBUG=false
